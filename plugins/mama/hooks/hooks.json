{
  "description": "MAMA hooks for tracking project context and learning from mistakes",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/sessionstart-hook.js",
            "timeout": 15
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/userpromptsubmit-hook.js",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
