{
  "name": "mama",
  "version": "1.7.12",
  "description": "Memory-Augmented MCP Assistant - Chat from anywhere, track decisions, never repeat mistakes.",
  "author": {
    "name": "SpineLift Team",
    "email": "dev@spinelift.com"
  },
  "license": "MIT",
  "repository": "https://github.com/jungjaehoon-lifegamez/MAMA",
  "homepage": "https://github.com/jungjaehoon-lifegamez/MAMA#readme",
  "keywords": [
    "claude-code",
    "memory-assistant",
    "decision-tracking",
    "mcp-server",
    "semantic-search"
  ],
  "commands": [
    "./commands/decision.md",
    "./commands/search.md",
    "./commands/checkpoint.md",
    "./commands/resume.md",
    "./commands/configure.md"
  ],
  "skills": ["./skills/mama-context"],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/sessionstart-hook.js",
            "timeout": 15
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/pretooluse-hook.js",
            "timeout": 5
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/precompact-hook.js",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/posttooluse-hook.js",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/posttooluse-hook.js",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "mama": {
      "command": "npx",
      "args": ["-y", "@jungjaehoon/mama-server"],
      "env": {
        "MAMA_EMBEDDING_MODEL": "Xenova/multilingual-e5-small"
      }
    }
  }
}
